<div class="search">
  <%= form_tag(search_path, method: :get, class: "sform") do %>
    <%= select_tag(:option, options_for_select([['Photos','1'],['Users', '2']]), class: "tbox")%>
    <%= text_field_tag :search, '', placeholder: 'Search', class: "sbox" %>
    <%= button_tag sanitize('<i class="fas fa-search"></i>'), :type => 'submit', class: "sbtn" %>
  <% end %>
</div>