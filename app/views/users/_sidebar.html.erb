<div class="sidebar">
  <div class="logo">
    <%= image_tag 'logo.png', size: '180x130' %>
  </div>

  <% if controller.controller_name == 'users' && controller.action_name == 'show' %>
    <div class="user-profile">
      <%= attachment_image_tag(user, :profile_image, fallback: 'no-image.jpg', size: '70x70', class: "img img-circle") %>
      <br>
      <div class="name"><%= user.name %></div>
      <div class="profile-list">
        <div class="profiles">
          <span class="profile"><%= user.layout %></span>
          <span class="profile"><%= user.area %></span>
          <span class="profile"><%= user.status %></span>
        </div>
      </div>
      <div class="profile-list">
        <div class="profiles">
          <span class="profile"><%= user.age %></span>
          <span class="profile"><%= user.gender %></span>
        </div>
      </div>


      <% if current_user != user %>
        <div class="follow-btn">
          <% if current_user.following?(user) %>
            <%= link_to user_relationships_path(user.id), method: :delete do %>
              <button class="btn">フォロー中</button>
            <% end %>
          <% else %>
            <%= link_to user_relationships_path(user.id), method: :POST do %>
              <button class="btn">フォロー</button>
            <% end %>
          <% end %>
        </div>
      <% end %>


      <table class="profile-list-count profile">
        <tbody>
          <tr>
            <td>すべての写真</td>
            <td><%= user.posts.count %></td>
          </tr>
          <tr>
            <td>フォロー</td>
            <td><%= user.follower.count %></td>
          </tr>
          <tr>
            <td>フォロワー</td>
            <td><%= user.followed.count %></td>
          </tr>
          <tr>
            <td>いいねした写真</td>
            <td><%= user.likes.count %></td>
          </tr>
        </tbody>
      </table>

      <div class="introduction">
        <div class="profile-header"><h4>自己紹介</h4></div>
        <div class="profile"><%= user.introduction %></div>
      </div>
    </div>
  <% end %>

  <nav class="main-nav">
    <ul class="nav-contents">
      <% if user_signed_in? %>
        <li class="nav"><%= link_to 'Home', root_path, class: 'link-style' %></li>
        <li class="nav"><%= link_to 'Upload Photo', new_post_path, class: 'link-style' %></li>
        <li class="nav"><%= link_to current_user.name, user_path(current_user), class: 'link-style' %></li>
        <li class="nav"><%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'link-style' %></li>
        <li class="nav"><%= link_to 'お問い合わせ', inquiry_path, class: 'link-style' %></li>
      <% else %>
        <li class="nav"><%= link_to 'Home', root_path, class: 'link-style' %></li>
        <li class="nav"><%= link_to 'About', about_path, class: 'link-style' %></li>
        <li class="nav"><%= link_to 'Login', new_user_session_path, class: 'link-style' %></li>
        <li class="nav"><%= link_to 'お問い合わせ', inquiry_path, class: 'link-style' %></li>
      <% end %>
    </ul>
    <div class="sns">
      <p class="sns-header">SNS</p>
      <i class="jquery3 fab fa-instagram fa-2x"></i><br>
      <i class="jquery1 fab fa-twitter fa-2x"></i><br>
      <i class="jquery2 fab fa-facebook fa-2x"></i>
    </div>
  </nav>

</div>