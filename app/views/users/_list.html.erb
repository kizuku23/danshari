<table class="table4">
  <% users.each do |user| %>
    <tr>
      <th>
        <%= link_to(user) do %>
          <%= attachment_image_tag(user, :profile_image, fallback: 'no-image.jpg', size: '50x50', class: "img-circle") %>
        <% end %>
      </th>
      <th>
        <%= link_to(user) do %>
          <span><%= user.name %></span>
        <% end %>
      </th>
      <td class="int"><%= user.introduction %></td>
      <td class="follow">
        <!-- current_user以外はフォローボタン表示 -->
        <% if current_user != user %>
          <% if current_user.following?(user) %>
            <%= link_to 'フォロー解除', user_relationships_path(user.id), method: :delete %>
          <% else %>
            <%= link_to 'フォロー', user_relationships_path(user.id), method: :POST %>
          <% end %>
        <% end %>
        <!-- ここまで -->
      </td>
    </tr>
  <% end %>
</table>
