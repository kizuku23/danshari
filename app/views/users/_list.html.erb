<table class="table4">
  <% users.each do |user| %>
    <tr>
      <th>
        <%= link_to(user) do %>
          <%= attachment_image_tag(user, :profile_image, fallback: 'no-image.jpg', size: '50x50', class: "img-user img-circle") %>
        <% end %>
      </th>
      <th>
        <%= link_to(user) do %>
          <span><%= user.name %></span>
        <% end %>
      </th>
      <td class="int"><%= user.introduction %></td>
      <td class="follow">
        <!-- current_user以外はフォローボタン表示 -->
        <% if current_user != user %>
          <div class="follow-btn following_buttons_<%= user.id %>">
            <%= render 'relationships/relationship', user: user %>
          </div>
        <% end %>
        <!-- ここまで -->
      </td>
    </tr>
  <% end %>
</table>
