<div id="container">

  <%= render 'users/sidebar' %>

  <div id="main-contents">
    <!-- 写真検索 -->
    <% if @user_or_post == "1" %>
      <div id="headline">
        <h3>写真一覧</h3>

        <%= render 'posts/sort' %>

      </div>

      <%= render 'posts/index', posts: @posts %>

    <!-- ユーザー検索 -->
    <% elsif @user_or_post == "2" %>
      <div id="headline">
        <h3>ユーザーリスト</h3>
      </div>

      <%= render 'users/list', users: @users %>

    <% end %>
  </div>
</div>