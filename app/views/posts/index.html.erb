<div class="headline">
  <h3>Posts</h3>
</div>

<div class="content">
  <ul class="post-grid">
    <% @posts.each do |post| %>
    <li class="post">
      <div class="info">
        <span class="info-font"> photo by</span><span class="info-name"><%= post.user.name%></span>

        <%= link_to(post.user) do %>
          <%= attachment_image_tag(post.user, :profile_image, fallback: 'no-image.jpg', size: '35x35', class: "img-circle") %>
        <% end %>
      </div>

      <%= link_to(post) do %>
        <%= attachment_image_tag post, :image, :fill, 200, 200, class: "img" %>
      <% end %>

    </li>
    <% end %>
    <%= paginate @posts %>
  </ul>
</div>