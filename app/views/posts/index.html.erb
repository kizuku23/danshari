<%= render 'users/sidebar' %>

<div class="main-content">

  <%= render 'users/search' %>

  <div class="headline">
    <h3>Posts</h3>
    <div class="sort">
      <%= form_with model: @post, url: sort_path, method: :get, local: true do |f| %>
        <%= f.select :keyword, [ ['新しい順', 'new'],['古い順', 'old'],['いいね順', 'likes']] %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>

  <%= render 'posts/index', posts: @posts %>

</div>