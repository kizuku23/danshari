<div id="container">

  <%= render 'users/sidebar' %>

  <div id="main-contents">
    <div id="headline">
      <!-- categoryから飛んだ場合のheadline -->
      <% if controller.action_name == "category" %>
        <h3>カテゴリー : <%= @category.name %></h3>
      <% else %>
        <h3>すべての写真</h3>

        <%= render 'posts/sort' %>

      <% end %>
    </div>

    <%= render 'posts/index', posts: @posts %>

  </div>
</div>