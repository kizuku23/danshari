<div id="container">

  <%= render 'users/sidebar' %>

  <div id="main-contents">
    <div id="headline">
      <h3>投稿編集</h3>
    </div>

    <%= render 'layouts/error_messages', post: @post %>

    <%= form_for(@post) do |f| %>
      <div class="photo">
        <%= f.label :写真イメージ %>
        <%= f.attachment_field :image %>
      </div>

      <table class="table3">
        <tr>
          <th>タグ名</th>
          <td>
            <p> カンマ区切り( , )で登録できます</p>
            <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "fields" %>
          </td>
        </tr>
        <tr>
          <th>詳細説明</th>
          <td><%= f.text_area :description, class: "fields" %></td>
        </tr>
      </table>

      <div>
        <%= f.submit '変更を保存', class: "pbtn" %>
      </div>
    <% end %>
  </div>
</div>