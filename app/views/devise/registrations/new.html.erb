<div id="container">

  <%= render 'users/sidebar' %>

  <div id="main-contents">
    <div id="headline">
      <h2>新規会員登録</h2>
    </div>

    <br /><%= link_to 'ゲストログイン（閲覧用）はこちら', users_guest_sign_in_path, method: :post, class: "guest" %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%#= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, placeholder: "ニックネームを入力", class: "fields" %>
      </div>

      <div class="field">
        <%#= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力", class: "fields" %>
      </div>

      <div class="field"><br />
        <%#= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力", class: "fields" %>
      </div>

      <div class="field">
        <%#= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを再入力", class: "fields" %>
      </div>

      <div class="actions"><br />
        <%= f.submit '新規登録', class: "ubtn" %>
      </div>
    <% end %>

    <br /><%= render "devise/shared/links" %>

  </div>
</div>
