<div id="container">

  <%= render 'users/sidebar', user: @user %>

  <div id="main-contents">
    <div id="headline">
      <h3>プロフィール編集</h3>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="plf-img">
        <%= f.label 'プロフィール画像' %><br>
        <%= attachment_image_tag @user, :profile_image, fallback: "no-image.jpg", size: "100x100", class: "prev" %><br>
        <%= f.attachment_field :profile_image, class: "image-prev" %>
      </div>

      <table class="table2">
        <tr>
          <th>お名前</th>
          <td><%= f.text_field :name, class: "fields" %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, class: "fields" %></td>
        </tr>
        <tr>
          <th>性別</th>
          <td><%= f.select :gender, User.genders.keys.map { |k| [k, k]} %></td>
        </tr>
        <tr>
          <th>年代</th>
          <td><%= f.select :age, User.ages.keys.map { |k| [k, k]} %></td>
        </tr>
        <tr>
          <th>居住形態</th>
          <td><%= f.select :status, User.statuses.keys.map { |k| [k, k]} %></td>
        </tr>
        <tr>
          <th>間取り</th>
          <td><%= f.select :layout, User.layouts.keys.map { |k| [k, k]} %></td>
        </tr>
        <tr>
          <th>広さ</th>
          <td><%= f.select :area, User.areas.keys.map { |k| [k, k]} %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= f.text_area :introduction, class: "fields" %></td>
        </tr>
      </table>

      <div>
        <%= f.submit '変更を保存', class: "ubtn pos" %>
      </div>
    <% end %>
  </div>
</div>