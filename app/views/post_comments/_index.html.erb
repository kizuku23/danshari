<% post_comments.each do |post_comment| %>
  <div class="comment">
    <div class="comment-user">
      <%= link_to user_path(post_comment.user), class: "user_#{post_comment.user.id}" do %>
        <%= attachment_image_tag post_comment.user, :profile_image, fallback: "no-image.jpg", size: "50x50", class: "img-circle" %>
      <% end %>
    </div>
    <%= post_comment.user.name %>
  </div>
  <div class="comment-text"><%= post_comment.comment %></div>
  <span class="comment-date"><%= post_comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></span>
  <!-- current_userの場合は削除ボタンを表示 -->
  <% if current_user == post_comment.user %>
    <%= link_to '削除', post_post_comment_path(@post, post_comment), method: :delete, data: {confirm: '本当に削除してもよろしいですか？'}, remote: true, class: "del-btn" %>
  <% end %>
<% end %>